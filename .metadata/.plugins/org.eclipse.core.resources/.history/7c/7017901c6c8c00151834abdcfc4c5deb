package cn.cqupt.work1;

import java.util.*;

public class Test3work1 {
	public static void main(String args[]){
		Scanner reader = new Scanner(System.in);
		System.out.println("输入x值：");
		int x = reader.nextInt();
		if(x < 0){
			int y = -1 + 2*x;
		}else if(x == 0){
			int y = -1;
		}else{
			int y = -1 + 3*x;
		}
		System.out.printf("对应x的y值是：%d%n",y);
	}
}

package cn.cqupt.work2_3;

public class Test3work5 {
	public static void main(String args[]){
		long i = 1;
		long j = 1;
		long sum1 = 0;
		long sum2 = 0;
		long sum;
		while(i < 100){
			sum1 = sum1 + j;
			i++;
			j = j * i;
		}
		System.out.println("1+2미+3미+...+99!=" + sum1);
		while(i <= 200){
			sum2 = sum2 + j;
			i++;
			j = j * i;
		}
		System.out.println("1+2미+3미+...+200!=" + sum2);
		sum = sum2 - sum1;
		System.out.println("100!+101!+...+200!=" + sum);
	}
}

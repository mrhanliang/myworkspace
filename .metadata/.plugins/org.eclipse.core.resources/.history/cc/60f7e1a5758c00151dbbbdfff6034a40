package cn.cqupt.work1;

public class Test3work4 {
	public static void main(String args[]){
		int i = 1;
		double j = 0;
		double sum = 0;
		while(i <= 1){
			if(i % 2 == 0){
				j = -1*(1 /(2*i - 1))
			}
			if(i % 2 != 0){
				j = 1/(2 * i -1)
			}
			sum = sum + j;
			i++;
		}
		System.out.println("1-1/3+1/5-1/7+....前10000项之和为：" + sum);
	}
}
